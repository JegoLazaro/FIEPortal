<!DOCTYPE html>
<html>
    <head>
        <title>Change Password</title>
        <link rel="stylesheet" type="text/css" href="CSS/SignIn.css">
    </head>
    <body>
    <div class="left-content, container" style="margin-right: auto; opacity: 20%;">
        <img src="Pictures/empanada.png" style="margin-top: auto; max-width: 80%;">
    </div>
        <div class="center-content">
            <div class="left-content">
                <img src="Pictures/ilocos-empanada 1.png">
            </div>
            <div class="right-content">
                <div>
                    <img src="Pictures/Circle Logo.png" class="logo">
                <div style="margin-top: 10%;">

                <form class = "pure-form" action="Inventory.html">
                    <input type="password" placeholder="Password" id="password" required>
                    <input type="password" placeholder="Confirm Password" id="confirm_password" required>
                    <div style="margin-top: 10%;">
                    <input type = "submit" id= "submit" name="submit" href="/" class="link, signin" style="margin-right: 5%;"></input>
                </form>

                </div>
                </div>
                </div>
            </div>
        </div>

        <script>
            var password = document.getElementById("password")
            var confirm_password = document.getElementById("confirm_password");
    
            function validatePassword(){
                if(password.value != confirm_password.value) {
                     confirm_password.setCustomValidity("Passwords Don't Match");
                } else {
                    confirm_password.setCustomValidity('');
                 }
            }
    
                    password.onchange = validatePassword;
                    confirm_password.onkeyup = validatePassword;
        </script>

    </body>
</html>