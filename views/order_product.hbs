<!-- Products Section-->
<main class="main-container"  style="margin-top: 10rem;">

    <section class="section">
      <h2 class="section-title">{{details}}</h2>
      <div class="products">
        {{#each products}}
          {{>product_row}}
        {{/each}}
      </div>
    </section>
    <section class="section">
      <h2 class="section-title">Cart</h2>
      <div class="cart">
        {{#if items}}
          {{#each items}}
            <div class="cart-item">
              <span class="cart-item-name">{{item.itemName}}</span> 
              <span class="cart-item-price">{{decimalFormat item.itemPrice}}</span>
              <!--<a href="/reduce-item/{{item._id}}"><button class="btn btn-primary btn-small">-</button></a>-->
                 <input type="hidden" class="cart_id" id="cart_id" name="cart_id" value="{{item._id}}">

              <span class="cart-item-qty">Qty: {{qty}}</span>
  
                <!--<a href="/add-item/{{item._id}}"><button class="btn btn-primary btn-small">+</button></a>-->
              <button class="remove-cart-btn" style="background:none; border:none;"><a  style="font-display:block;" class=" btn btn-primary btn-small">X</a></button>
            </div>

          {{/each}}
        {{else}}
        {{/if}}
        {{#if totalPrice}}
        <span class="cart-footer cart-footer-total cart-footer-total-php">{{decimalFormat totalPrice}}</span>
        {{else}}
        <span class="cart-footer cart-footer-total cart-footer-total-php"> 0.00</span>
        {{/if}}
        <span class="cart-footer cart-footer-total cart-footer-total-qty">{{totalQuantity}}</span>
        

      </div>
        {{#if items}}
        <a href="#" class="cart-footer cart-footer-total">            
                <button id="btn-checkout" class="btn btn-primary">
                        Check Out
                    </button>
                </a> 
        {{else}}
          <strong class="cart-footer">No items in cart</strong>
        {{/if}}
    </section>
